<p id="notice"><%= notice %></p>

<h1>Cursos Disponibles</h1>

<table class="imagetable">
  <thead>
    <tr>
      <th>Cursos enerigías&nbsp;&nbsp;&nbsp;</th>
      <th>Cursos cocina</th>
      <th>Cursos artesanías</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.energy.descripcion %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= activity.kitchen.descripcion %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= activity.craft.descripcion %>&nbsp;&nbsp;&nbsp;</td>
        <td><%= link_to 'Ver', activity %></td>
        <td><%= link_to 'Editar', edit_activity_path(activity) %></td>
        <td><%= link_to 'Eliminar', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

