        <td><%= link_to 'Editar', edit_craft_path(craft) %></td>
        <td><%= link_to 'Eliminar', craft, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

