<p id="notice"><%= notice %></p>

<h1>Curso Energías Renovables</h1>

<table class="imagetable">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Descripcion</th>
      <th>Costo</th>
      <th>Materiales</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @energies.each do |energy| %>
      <tr>
        <td><%= energy.fecha %></td>
        <td><%= energy.descripcion %></td>
        <td><%= energy.costo %></td>
        <td><%= energy.materiales %></td>
        <td><%= link_to 'ver', energy %></td>
        <td><%= link_to 'Editar', edit_energy_path(energy) %></td>
        <td><%= link_to 'Eliminar', energy, method: :delete, data: { confirm: 'Estás seguro de eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Curso', new_energy_path %>
