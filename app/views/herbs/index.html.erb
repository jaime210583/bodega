<p id="notice"><%= notice %></p>

<h1>Hierbas</h1>

<table class="imagetable">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Descripcion</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @herbs.each do |herb| %>
      <tr>
        <td><%= herb.tipo %></td>
        <td><%= herb.descripcion %></td>
        <td><%= herb.precio %></td>
        <td><%= link_to 'Ver', herb %></td>
        <td><%= link_to 'Editar', edit_herb_path(herb) %></td>
        <td><%= link_to 'Eliminar', herb, method: :delete, data: { confirm: 'Seguro de eliminar' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Hierbas', new_herb_path %>
