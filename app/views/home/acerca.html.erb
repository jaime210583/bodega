</ul>   -->
  

  <section class="awSlider">
  <div  class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target=".carousel" data-slide-to="0" class="active"></li>
      <li data-target=".carousel" data-slide-to="1"></li>
      <li data-target=".carousel" data-slide-to="2"></li>
      <li data-target=".carousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <%= image_tag "verduras.jpg", size:"490x271"%>
        <div class="carousel-caption">verduras orgánicas</div>
      </div>
      <div class="item">
        <%= image_tag "bio.jpg", size:"490x271"%>
        <div class="carousel-caption">Lacteos orgánicos</div>
      </div>
      <div class="item">
        <%= image_tag "solar.jpg", size:"490x271"%>
        <div class="carousel-caption">Curso de energía solar</div>
      </div>
      <div class="item">
        <%= image_tag "frutas.jpg", size:"490x271"%>
        <div class="carousel-caption">Frutas orgánicas</div>
      </div>
    </div>

    <!-- Controls -->
    <a class="left carousel-control" href=".carousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Geri</span>
    </a>
    <a class="right carousel-control" href=".carousel" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">İleri</span>
    </a>
  </div>
</section>

</body>
</html>                                   


