<p id="notice"><%= notice %></p>

<h1>Listing Hydroponics</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Descripcion</th>
      <th>Costo</th>
      <th>Materiales</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hydroponics.each do |hydroponic| %>
      <tr>
        <td><%= hydroponic.fecha %></td>
        <td><%= hydroponic.descripcion %></td>
        <td><%= hydroponic.costo %></td>
        <td><%= hydroponic.materiales %></td>
        <td><%= link_to 'Show', hydroponic %></td>
        <td><%= link_to 'Edit', edit_hydroponic_path(hydroponic) %></td>
        <td><%= link_to 'Destroy', hydroponic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

