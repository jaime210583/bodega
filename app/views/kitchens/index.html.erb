<p id="notice"><%= notice %></p>

<h1>Listing Kitchens</h1>

<table class="imagetable">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Descripcion</th>
      <th>Costo</th>
      <th>Materiales</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @kitchens.each do |kitchen| %>
      <tr>
        <td><%= kitchen.fecha %></td>
        <td><%= kitchen.descripcion %></td>
        <td><%= kitchen.costo %></td>
        <td><%= kitchen.materiales %></td>
        <td><%= link_to 'Ver', kitchen %></td>
        <td><%= link_to 'Editar', edit_kitchen_path(kitchen) %></td>
        <td><%= link_to 'Eliminar', kitchen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

